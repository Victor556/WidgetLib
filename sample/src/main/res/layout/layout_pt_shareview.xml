<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:putao="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.putao.ptx.widget.PTShareView
        android:id="@+id/bt_share_by_qq"
        style="@style/share_icon"
        android:text="QQ"
        putao:drawable="@mipmap/ic_share_by_qq"
        putao:drawable_height="144"
        putao:drawable_width="144"/>

    <com.putao.ptx.widget.PTShareView
        android:id="@+id/bt_share_by_qzone"
        style="@style/share_icon"
        android:layout_marginLeft="30dp"
        android:text="QQ Zone"
        putao:drawable="@mipmap/ic_share_by_qzone"
        putao:drawable_height="144"
        putao:drawable_width="144"/>

</LinearLayout>