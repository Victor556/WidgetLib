<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:contentPadding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.putao.ptx.widget.PTWheelView
                android:id="@+id/view_year"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <com.putao.ptx.widget.PTWheelView
                android:id="@+id/view_month"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <com.putao.ptx.widget.PTWheelView
                android:id="@+id/view_day"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/clr_black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <com.putao.ptx.widget.PTDateWheelViewWarpper
            android:id="@+id/date_wheel_view_warpper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:showYear="false"
            app:showMonth="false"
            app:showDay="false"
            app:showHour="true"
            app:showMinute="true"
            app:minuteCalibration="10"
            app:showSecond="true"
            app:secondCalibration="5"
            app:childUseWeight="true"
            app:useUnit="true"
            app:disableAmOrPm="true"
            app:visibleItems="5"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_date_wheel_warpper_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/clr_black"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
